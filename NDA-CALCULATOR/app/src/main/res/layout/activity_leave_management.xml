<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/option_green"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/option_green"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="📅 Leave Management"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Apply and manage your leave applications"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Leave Application Form -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/light_option_green"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📝 New Leave Application"
                    android:textColor="@color/option_green"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout 
                    android:layout_width="match_parent" 
                    android:layout_height="wrap_content" 
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout 
                        style="@style/GreenOptionTextInputLayout"
                        android:layout_width="0dp" 
                        android:layout_weight="1" 
                        android:layout_height="wrap_content" 
                        android:hint="@string/leave_from"
                        android:layout_marginEnd="8dp">
                        <com.google.android.material.textfield.TextInputEditText 
                            android:id="@+id/etLeaveFromDate" 
                            android:layout_width="match_parent" 
                            android:layout_height="wrap_content" 
                            android:focusable="false" 
                            android:inputType="none" 
                            android:textColor="@color/black" 
                            android:textColorHint="@color/option_green" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout 
                        style="@style/GreenOptionTextInputLayout"
                        android:layout_width="0dp" 
                        android:layout_weight="1" 
                        android:layout_height="wrap_content" 
                        android:hint="@string/leave_to"
                        android:layout_marginStart="8dp">
                        <com.google.android.material.textfield.TextInputEditText 
                            android:id="@+id/etLeaveToDate" 
                            android:layout_width="match_parent" 
                            android:layout_height="wrap_content" 
                            android:focusable="false" 
                            android:inputType="none" 
                            android:textColor="@color/black" 
                            android:textColorHint="@color/option_green" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout 
                    style="@style/GreenOptionTextInputLayout"
                    android:layout_width="match_parent" 
                    android:layout_height="wrap_content" 
                    android:hint="@string/type_of_leave"
                    android:layout_marginTop="12dp">
                    <com.google.android.material.textfield.TextInputEditText 
                        android:id="@+id/etLeaveTypeSelection" 
                        android:layout_width="match_parent" 
                        android:layout_height="wrap_content" 
                        android:focusable="false" 
                        android:inputType="none" 
                        android:textColor="@color/black" 
                        android:textColorHint="@color/option_green" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout 
                    style="@style/GreenOptionTextInputLayout"
                    android:layout_width="match_parent" 
                    android:layout_height="wrap_content" 
                    android:hint="Notes (Optional)"
                    android:layout_marginTop="12dp">
                    <com.google.android.material.textfield.TextInputEditText 
                        android:id="@+id/etLeaveNotes" 
                        android:layout_width="match_parent" 
                        android:layout_height="wrap_content" 
                        android:inputType="textMultiLine"
                        android:minLines="2"
                        android:maxLines="4"
                        android:textColor="@color/black" 
                        android:textColorHint="@color/option_green" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnApplyLeave"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:backgroundTint="@color/option_green"
                    android:text="📅 Apply Leave"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Leave Records -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/light_option_green">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="📋 Leave Applications"
                        android:textColor="@color/option_green"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnExportLeavePDF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/option_green"
                        android:text="📄 Export PDF"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvLeaveRecords"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>